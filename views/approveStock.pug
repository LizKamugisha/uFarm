            //-     th Status
            //-     td
            //-         label Approved&nbsp
            //-         input(value= "approved" type="radio" checked = item.status==="approved" name="status") 
            //-         label &nbspDeclined&nbsp
            //-         input(value= "declined" type="radio" checked = item.status==="declined" name="status")
            tr 
                td(colspan="2")
                    button.btn.btn-success.btn-block(type='submit') Update