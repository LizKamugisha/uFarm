extends layoutAO
block content
    h3(class='formTitle') List of all Farmer One Officers
    table(class='table')
        thead
            tr
                //- th(scope='col') view Details
                //- th F.O 1
                //- th F.O 2
                //- th F.O 3
                //- th F.O 4

                th Names:
                th Ward:
                th F.O Number:
                th Regsitration Date:
                th Gender:
                th Activities:
                th Phone:
                th Address:
                th Username:
                th Password:

        tbody
            if users.length
            each user in users
                tr
                    td #{user.name}
                    td #{user.selectWard}
                    td #{user.foNum}
                    td #{user.regDate}
                    td #{user.gender}
                    td #{user.foActivities}
                    td #{user.phone}
                    td #{user.address}
                    td #{user.username}
                    td #{user.password}
                    td
                        a(class='btn btn-outline-success btn-sm' href='/updateFo/'+user._id) Update
                    td
                        //- form(method="post" action='/delete')
                        //-     input(type="hidden", placeholder="", name="id", value=user._id)
                        //-     button.btn.btn-dark.btn-block(type="submit") Delete  
            else
                p No registrations yet :(