extends layoutFO
block content
    h3(class='formTitle') Update Urban Farmer Details
    form(method='post' action='/updateUF?id='+user._id)
        table(class='table')
         thead
            tr
                th Names
                td
                    input.form-control(value = user.name name ='name' readonly)
            tr
                th Gender
                td
                    label Male&nbsp
                    input(value= "male" type="radio" checked = user.gender==="male" name="gender" disabled) 
                    label &nbspFemale&nbsp
                    input(value= "female" type="radio" checked = user.gender==="female" name="gender" disabled)
            tr
                th Date of Birth
                td
                    input.form-control(value = user.birthday name ='birthday' readonly)
            tr
                th National ID
                td
                    input.form-control(value = user.nin name ='nin' readonly)
            //- tr
            //-     th ID Photo
            //-     td
            //-         input.form-control(value = user.idPhoto name ='idPhoto')
            tr
                th Phone Number
                td
                    input.form-control(value = user.phone name ='phone')
            tr
                th Farm Address
                td
                    input.form-control(value = user.address name ='address' readonly)
            tr
                th Urban Ward
                td 
                    select.form-control(name='selectWard')
                        option(value='ward 1' selected = user.selectWard === 'ward 1') Urban Ward 1
                        option(value='ward 2' selected = user.selectWard === 'ward 2') Urban Ward 2
                        option(value='ward 3' selected = user.selectWard === 'ward 3') Urban Ward 3
                        option(value='ward 4' selected = user.selectWard === 'ward 4') Urban Ward 4
            tr
                th Activities
                td 
                    label Horticulture&nbsp 
                    input(value= 'Horticulture' type='checkbox' checked = user.activities.includes('Horticulture') name='activities')
                    label &nbspPoultry&nbsp
                    input(value= 'Poultry' type='checkbox' checked =user.activities.includes('Poultry') name='activities')
                    label &nbspDiary&nbsp
                    input(value= 'Diary' type='checkbox' checked =user.activities.includes('Diary') name='activities')
            tr
                th Registration Date
                td
                    input.form-control(value = user.regDate name ='regDate' readonly)
            tr
                th Ufarm ID Number
                td
                    input.form-control(value = user.foNum name ='ufarmID' readonly)
            tr
                th Username
                td
                    input.form-control(value = user.username name ='username')
            tr  
                th Password
                td
                    input.form-control(value = user.password name ='password')
            tr 
                td(colspan="2")
                    button.btn.btn-success.btn-block(type='submit') Update
